<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/userinfo", user:@user %>
      <%= render "books/submit", book:@book_new %>
    <h2>Book detai</h2>
      <div>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill,100,100, format:"jpeg", fallback:"no_image.jpg" %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book.title %>
              </td>
              <td>
                <%= @book.opinion %>
              </td>
              <td>
                <% if @user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, 'data-confirm' => "本当に削除しますか？" , class:"btn btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
   </div>
</div>
