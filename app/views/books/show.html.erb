<div class="container py-3 pb-5">
  <div class="row">
    <div class="col-md-3 pr-1">
      <%= render "users/userinfo",user:@user %>
      <%= render "books/submit", book:@book_new %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
      <div>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :image, :fill,100,100, format:"jpeg", fallback:"no_image.jpg" %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book.title %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", mothod: :delete, class:"btn btn-danger", data: {confirm: "本当に削除しますか？" } %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
  </div>
</div>
