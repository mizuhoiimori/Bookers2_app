<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <img class="attachment user profile_image fallback" src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg">
      <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </th>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
      </table>

<div class="row">
<a class="btn btn-outline-secondary btn-block fas fa-user-cog"><% link_to edit_user_registration_path %></a>
</div>
  <h2 class="mt-3">New book</h2>
    <%= form_with model:@book, local:true do |f| >
    <div class="form-group">
    <label for="book_title">
      <%= f.text_field :titel %></label>
    </div>
    <div class="form-group">
    <label for="book_opinion">Opinion</label>
      <%= f.text_field :opinion %></label>
    </div>
    <div class="form-group">
    <button type="button" class="btn btn-success">
    <%= f.submit "Creat Book" %></button>
    <% end %> 
    </div>
</div>

  <div class="col-md-8 offset-md-1">
  	<h2>Book detail</h2>
  	<% @books.each do |book| %>
  		<table class="table">
  		  <tbody><tr>
          <td><a class="user-image"><%= user.image %></a><br>
              <a class="user-name"><%= user.name %></a>
          </td>
          <td><a class="book_title"><%= book.title %></a></td>
          <td><a class="book-opinions"><%= book.opinion %></a></td>
          <td><button type="button" class="btn btn-success"><%= link_to "Edit", books_path(@book) %></button></td>
          <td><button type="button" class="btn btn-danger"><%= link_to "Destroy", books_path, method: :delete,data: { confirm: '本当に消しますか？' } %></button></td>
        </tr>
   
      </tbody></table>
    </div>
  </div>
</div>
      </main>