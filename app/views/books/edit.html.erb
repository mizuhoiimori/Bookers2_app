<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>

      <div class="form-group">
        <h4 class="py-2">
          <label for="inputTitle">Title</label></h4>
            <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class:"form-contorol" %>
      </div>
      <div class="form-group">
        <h4 class="py-2">
          <label for="inputOpinions">Opinion</label></h4>
            <%= f.text_area :opinion, autofocus: true, id:"inputOpinions", placeholder:"Opinion", class:"form-control" %>
      </div>
        <%= f.submit "Update Book", class:"btn btn-success" %>
      <% end %>

      <div class="menu">
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>