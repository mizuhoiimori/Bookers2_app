<div class="container pt-3 pb-5">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h2>User info</h2>
      <span class="text-danger">
        <%= render "users/error" %>
      </span>

        <%= form_with model:@user, local:true do |f| %>
         <div class="form-group py-2">
           <label for="inputName">Name</label>
           <%= f.text_field:name, autofocus:true, id:"inputName", class:"form-control" %>
         </div>

         <div>
           <label for="inputImage">Image</label>
           <%= attachment_image_tag @user, :image, :fill,60,60, fallback:"no_image.jpeg" %>
           <%= f.attachment_field :image, placeholder:"ファイルを選択", class:"py-3" %>
         </div>

         <div class="form-group py-3">
           <label for="inputIntroduction">Introduction</label>
           <%= f.taxt_field:introduction, autofocus:true, id:"inputIntroduction", class:"form-control" %>
         </div>
         <div class="upload">
            <%= f.submit "Update User", class:"text-light btn btn-secondary" %>
         </div>
        <% end %>
    </div>
  </div>
</div>