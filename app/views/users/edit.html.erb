<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <span class="text-danger">
      <% if @user.errors.any? %>
      <h3>
        <%= @user.errors.count %>errors prohibited this obj from being saved:</h3></br>
        <% @user.errors.full_messages.each do |message| %>
          <ul>
              <li><%= message %></li>
          </ul>
        <% end %>
      <% end %>
      </span>

        <%= form_with model:@user, local:true do |f| %>

         <div class="form-group">
          <div class="field_with_errors">
            <label for="user_name">Name</label>
          </div>
           <%= f.text_field:name, id:"user_name", class:"form-control name" %>
         </div>

         <div class="form-group">
           <label for="user_image">Image</label>
           <%= f.attachment_field :profile_image, class:"form-control_file user_image" %>
           </div>

         <div class="form-group">
           <label for="user_introduction">Introduction</label>
           <%= f.text_field:introduction, id:"user_introduction", class:"form-control introduction" %>
         </div>

         <div class="form-group">
            <%= f.submit "Update User", class:"btn btn-secondary" %>
         </div>

        <% end %>

    </div>
  </div>
</div>