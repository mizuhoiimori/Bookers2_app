<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Bookers2</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
      <div class="container">
        <%= link_to "Bookers", root_path, class:"navbarbrand text-white"  %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      　<div class="collapse navbar-collapse" id="navbarNavDropdown">
          <% if user_signed_in? %>
          <!--ログイン済み？-->
      　　<!--true-->
            <ul class="navbar-nav  ml-auto">
              <li class="nav-item">
                <%= link_to users_path(current_user.id),class:"nav-link text-white fas fa-home pr-1" do %>Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path,class:"nav-link text-white fas fa-users pr-1" do %>Users
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to books_path,class:"nav-link text-white fas fa-book-open pr-1" do %>Books
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path,method: :delete,class:"nav-link text-white fas fa-sign-out-alt pr-1" do %>Log out
                <% end %>
              </li>
            </ul>
          <!--</div>-->
          <% else %>
        <!--false-->
          <!--<div class="collapse navbar-collapse" id="navbarNavDropdown">-->
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <%= link_to root_path,class:"nav-link text-light fas fa-home" do %>Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to homes_about_path,class:"nav-link text-light fas fa-link" do %>About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path,class:"nav-link text-light fas fa-user-plus" do %>Sign up
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path,class:"nav-link text-light fas fa-sign-in-alt" do %>Log in
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
  </header>
    <span class="text-success">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class:"#{key}") %>
        <% end %>
    </span>
 <main>
  <%= yield %>
 </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
